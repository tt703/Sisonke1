<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeColor="#FFD700"
    app:strokeWidth="2dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Icon for Warning -->
        <ImageView
            android:id="@+id/dialogIcon"
            android:layout_width="45dp"
            android:layout_height="48dp"
            app:itemIconTint="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/grey"
            android:contentDescription="@string/warning_icon"
            android:src="@drawable/baseline_dangerous_24"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/alertTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Message -->
        <TextView
            android:id="@+id/alertMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/you_are_about_to_preview_the_invoice_once_generated_it_cannot_be_edited_are_you_sure_you_want_to_proceed"
            android:textSize="24sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Buttons -->
        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Cancel Button -->
            <Button
                android:id="@+id/negativeButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="#FFFFFF"
                android:backgroundTint="#B00020"
                android:layout_marginEnd="8dp" />

            <!-- Proceed Button -->
            <Button
                android:id="@+id/positiveButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proceed"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFD700" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
